<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ProfileSection">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/ic_left_arrow"
            android:padding="10dp" />

        <ImageView
            android:id="@+id/ivShoppingCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_shopping_cart"
            android:padding="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_toLeftOf="@id/ivShoppingCart"
            android:background="@drawable/ic_magnifiying_glass"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tvFurniture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/imBack"
            android:text="PROFILE"
            android:textColor="#D2000000"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/NameEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Mintu Kumar"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/EditButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="right"
            android:text="EDIT"
            android:textColor="#E74512"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/NumberEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="99282300707"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/EmailEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_stop_24"
            android:drawablePadding="5dp"
            android:gravity="right"
            android:padding="5dp"
            android:text="sainimintu34@gamil.com"
            android:textColor="#111111"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnMyOrder"
            style="@style/Profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_box"
            android:drawableEnd="@drawable/ic_right_arrow__1_"
            android:drawablePadding="10dp"
            android:text="My Orders"
            android:textAllCaps="false" />
        <View
            android:layout_width="match_parent"
            android:background="#7D545050"
            android:layout_marginHorizontal="25dp"
            android:layout_height="1dp"/>

        <Button
            style="@style/Profile"
            android:id="@+id/btnTrackOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_arrival"
            android:drawableEnd="@drawable/ic_right_arrow__1_"
            android:drawablePadding="10dp"
            android:text="Track Orders"
            android:textAllCaps="false" />
        <View
            android:layout_width="match_parent"
            android:background="#7D545050"
            android:layout_marginHorizontal="25dp"
            android:layout_height="1dp"/>
        <Button
            android:id="@+id/btnWhishList"
            style="@style/Profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_favorite_border_24"
            android:drawableEnd="@drawable/ic_right_arrow__1_"
            android:drawablePadding="10dp"
            android:text="Whishlit"
            android:textAllCaps="false" />
        <View
            android:layout_width="match_parent"
            android:background="#7D545050"
            android:layout_marginHorizontal="25dp"
            android:layout_height="1dp"/>
        <Button
            style="@style/Profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_wallet"
            android:drawableEnd="@drawable/ic_right_arrow__1_"
            android:drawablePadding="10dp"
            android:text="My Wallet"
            android:textAllCaps="false" />
        <View
            android:layout_width="match_parent"
            android:background="#7D545050"
            android:layout_marginHorizontal="25dp"
            android:layout_height="1dp"/>
        <Button
            style="@style/Profile"
            android:id="@+id/btnAddressBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_phone_book"
            android:drawableEnd="@drawable/ic_right_arrow__1_"
            android:drawablePadding="10dp"
            android:text="Address Book"
            android:textAllCaps="false" />
        <View
            android:layout_width="match_parent"
            android:background="#7D545050"
            android:layout_marginHorizontal="25dp"
            android:layout_height="1dp"/>
        <Button
            style="@style/Profile"
            android:id="@+id/btnChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_lock"
            android:drawableEnd="@drawable/ic_right_arrow__1_"
            android:drawablePadding="10dp"
            android:text="Change password"
            android:textAllCaps="false" />
        <View
            android:layout_width="match_parent"
            android:background="#7D545050"
            android:layout_marginHorizontal="25dp"
            android:layout_height="1dp"/>
        <Button
            style="@style/Profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_verified"
            android:drawableEnd="@drawable/ic_right_arrow__1_"
            android:drawablePadding="10dp"
            android:text="Two - Step Verification"
            android:textAllCaps="false" />
        <View
            android:layout_width="match_parent"
            android:background="#7D545050"
            android:layout_marginHorizontal="25dp"
            android:layout_height="1dp"/>
        <Button
            android:id="@+id/SignOut"
            style="@style/Profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_sign_out"
            android:drawableEnd="@drawable/ic_right_arrow__1_"
            android:drawablePadding="10dp"
            android:text="Sign Out"
            android:textAllCaps="false" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="80dp">

            <View
                android:id="@+id/bottomActionbarDiscover"
                style="@style/btoom_action_bar_style"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home_black"
                app:layout_constraintBottom_toBottomOf="@id/bottomActionbarDiscover"
                app:layout_constraintEnd_toStartOf="@+id/ivDepartment"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/bottomActionbarDiscover" />

            <TextView
                android:id="@+id/tvHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="@string/home"
                android:textColor="#000000"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/bottomActionbarDiscover"
                app:layout_constraintHorizontal_bias="0.123"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/ivDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu"
                app:layout_constraintBottom_toBottomOf="@id/bottomActionbarDiscover"
                app:layout_constraintEnd_toStartOf="@+id/ivAlert"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/ivHome"
                app:layout_constraintTop_toTopOf="@id/bottomActionbarDiscover" />

            <TextView
                android:id="@+id/tvDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="@string/department"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/bottomActionbarDiscover"
                app:layout_constraintHorizontal_bias="0.302"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/ivAlert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_notification"
                app:layout_constraintBottom_toBottomOf="@id/bottomActionbarDiscover"
                app:layout_constraintEnd_toStartOf="@+id/ivHeart"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/ivDepartment"
                app:layout_constraintTop_toTopOf="@id/bottomActionbarDiscover" />

            <TextView
                android:id="@+id/tvAlert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="@string/alert"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/bottomActionbarDiscover"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/ivHeart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_heart"
                app:layout_constraintBottom_toBottomOf="@id/bottomActionbarDiscover"
                app:layout_constraintEnd_toStartOf="@+id/ivSettings"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/ivAlert"
                app:layout_constraintTop_toTopOf="@id/bottomActionbarDiscover" />

            <TextView
                android:id="@+id/tvWishList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="@string/wishlist"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/bottomActionbarDiscover"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/ivSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_user_orange"
                app:layout_constraintBottom_toBottomOf="@id/bottomActionbarDiscover"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/ivHeart"
                app:layout_constraintTop_toTopOf="@id/bottomActionbarDiscover" />

            <TextView
                android:id="@+id/tvProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="@string/profile"
                android:textColor="@color/dark_orange"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/bottomActionbarDiscover"
                app:layout_constraintHorizontal_bias="0.89"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</LinearLayout>