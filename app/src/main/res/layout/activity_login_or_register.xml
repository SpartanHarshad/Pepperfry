<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.LoginOrRegister">

    <ImageView
        android:layout_marginTop="100dp"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/logo" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/pot" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"

        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:text="log in"
            android:layout_margin="5dp"
            android:background="@drawable/orange_rectangle"
            android:textColor="@color/dark_orange"
            android:id="@+id/btnLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_margin="5dp"

            android:background="#EA5425"
            android:fontFamily="@font/fira_sans"
            android:text="register"
            android:textColor="@color/white" />

    </LinearLayout>
    <Button
        android:id="@+id/btnSkipItNow"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:textColor="#D43D3B3B"
        android:layout_marginTop="10dp"
        android:background="?android:selectableItemBackgroundBorderless"
        android:text="skip it for now >"
        android:layout_height="wrap_content"/>


</LinearLayout>