<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.DepartmentsActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        style="@style/actionbar_cardView_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/tvName_discover"
            style="@style/discover_title_textStyle"
            android:background="@drawable/pf"
            android:textColor="@color/black" />
        <ImageView
            android:id="@+id/tvMenu_Navigation"
            style="@style/discover_title_textStyle2"
            android:background="@drawable/ic_left_chevron"
            android:textColor="@color/black" />

        <ImageView
            style="@style/overflow_icon_style"
            android:src="@drawable/ic_shopping_cart" />
        <androidx.appcompat.widget.SearchView
            style="@style/overflow_icon_style2"
            android:src="@drawable/ic_search" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnfurniture"
        style="@style/Departments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="start"
        android:gravity="start"
        android:drawableEnd="@drawable/ic_right_arrow__1_"
        android:text="Furniture" />

    <Button
        android:id="@+id/btnLiving"
        style="@style/Departments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="start"
        android:drawableEnd="@drawable/ic_right_arrow__1_"
        android:text="@string/living" />

    <Button
        android:id="@+id/btnBedRoom"
        style="@style/Departments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="start"
        android:drawableEnd="@drawable/ic_right_arrow__1_"
        android:text="BEDROOM" />

    <Button
        style="@style/Departments"
        android:id="@+id/btnKidsRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="start"
        android:drawableEnd="@drawable/ic_right_arrow__1_"
        android:text="@string/kids_room" />

    <Button
        android:id="@+id/btnMattresses"
        style="@style/Departments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="start"
        android:drawableEnd="@drawable/ic_right_arrow__1_"
        android:text="MATTRESSES" />

    <Button
        android:id="@+id/btnFurnishings"
        style="@style/Departments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="start"
        android:drawableEnd="@drawable/ic_right_arrow__1_"
        android:text="FURNISHING" />

    <Button
        android:id="@+id/btnDecor"
        style="@style/Departments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="start"
        android:drawableEnd="@drawable/ic_right_arrow__1_"
        android:text="@string/decor" />

    <Button
        android:id="@+id/btnLightings"
        style="@style/Departments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="start"
        android:drawableEnd="@drawable/ic_right_arrow__1_"
        android:text="LIGHTING" />

    <Button
        android:id="@+id/btnModularFurniture"
        style="@style/Departments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="start"
        android:drawableEnd="@drawable/ic_right_arrow__1_"
        android:text="MODULAR FURNITURE" />

    <Button
        android:id="@+id/btnClearanceSale"
        style="@style/Departments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="start"
        android:drawableEnd="@drawable/ic_right_arrow__1_"
        android:text="CLEARANCE SALE" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="100dp">

        <View
            android:id="@+id/bottomActionbarDiscover"
            style="@style/btoom_action_bar_style"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_black"
            app:layout_constraintBottom_toBottomOf="@id/bottomActionbarDiscover"
            app:layout_constraintEnd_toStartOf="@+id/ivDepartment"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/bottomActionbarDiscover" />

        <TextView
            android:id="@+id/tvHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:textColor="#000000"
            android:textSize="10sp"
            android:layout_marginBottom="3dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/bottomActionbarDiscover"
            app:layout_constraintHorizontal_bias="0.123"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/ivDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_orange"
            app:layout_constraintBottom_toBottomOf="@id/bottomActionbarDiscover"
            app:layout_constraintEnd_toStartOf="@+id/ivAlert"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ivHome"
            app:layout_constraintTop_toTopOf="@id/bottomActionbarDiscover" />

        <TextView
            android:id="@+id/tvDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="@string/department"
            android:textColor="#f05d21"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/bottomActionbarDiscover"
            app:layout_constraintHorizontal_bias="0.302"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/ivAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notification"
            app:layout_constraintBottom_toBottomOf="@id/bottomActionbarDiscover"
            app:layout_constraintEnd_toStartOf="@+id/ivHeart"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ivDepartment"
            app:layout_constraintTop_toTopOf="@id/bottomActionbarDiscover" />

        <TextView
            android:id="@+id/tvAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="@string/alert"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/bottomActionbarDiscover"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/ivHeart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_heart"
            app:layout_constraintBottom_toBottomOf="@id/bottomActionbarDiscover"
            app:layout_constraintEnd_toStartOf="@+id/ivSettings"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ivAlert"
            app:layout_constraintTop_toTopOf="@id/bottomActionbarDiscover" />

        <TextView
            android:id="@+id/tvWishList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="@string/wishlist"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/bottomActionbarDiscover"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/ivSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_user"
            app:layout_constraintBottom_toBottomOf="@id/bottomActionbarDiscover"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ivHeart"
            app:layout_constraintTop_toTopOf="@id/bottomActionbarDiscover" />

        <TextView
            android:id="@+id/tvProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="@string/profile"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/bottomActionbarDiscover"
            app:layout_constraintHorizontal_bias="0.89"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>